<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h2  class="col-6 offset-3">Login</h2>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label" >Username</label>
                <input name="username" type="text" class="form-control" required/>
                <div class="invalid-feedback"><i>Enter your username</i></div>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" type="password" class="form-control" required/>
                <div class="invalid-feedback"><i>Enter your password</i></div>
              </div>
              <button class="btn btn-primary">Login</button>
        </form>
    </div>
</div>